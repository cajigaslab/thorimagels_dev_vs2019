            <StackPanel Orientation="Horizontal"
                        Margin="0,3,0,0"
                        Background="#FF4B4B4B">
                <Label HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Content="Advanced Settings"
                       Width="320">
                </Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="10,3,0,0"
                        Width="350">
                <Label Content="Local Computer Name"
                       Width="140"
                       HorizontalContentAlignment="Left"/>
                <Label Height="24"
                       Width="180"
                       Content="{Binding Path=LocalPCHostName}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="10,3,0,0"
                        Width="350">
                <Label Content="Local IP address"
                       Width="140"
                       HorizontalContentAlignment="Left"/>
                <Label Height="24"
                       Width="180"
                       Content="{Binding Path=LocalPCIPv4}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="10,3,0,0"
                        Width="350">
                <Label Content="PC Identification Mode"
                       Width="140"
                       HorizontalContentAlignment="Left"/>
                <ListBox Name="IDModeListBox"
                         SelectedIndex="{Binding Path=IDMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <!--SelectionChanged="IDMode_SelectionChanged">-->
                    <ListBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}">#FF595959</SolidColorBrush>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}">LimeGreen</SolidColorBrush>
                    </ListBox.Resources>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Style.Triggers>
                                <Trigger Property="IsSelected"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="LimeGreen"/>
                                </Trigger>
                                <Trigger Property="IsSelected"
                                         Value="false">
                                    <Setter Property="Background"
                                            Value="#FF444444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBoxItem Content="Name"
                                 HorizontalContentAlignment="Center"
                                 VerticalAlignment="Bottom"
                                 Foreground="White"
                                 Width="85"
                                 Height="30"
                                 Margin="0"
                                 BorderThickness="1.2"/>
                    <ListBoxItem Content="IP"
                                 HorizontalContentAlignment="Center"
                                 VerticalAlignment="Bottom"
                                 Foreground="White"
                                 Width="85"
                                 Height="30"
                                 Margin="0"
                                 BorderThickness="1.2"/>
                </ListBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,5,0,0">
                <!--<Button Content="Cancel"
                        Width="75"
                        Height="30"
                        Margin="3"
                        Name="btnCancel"
