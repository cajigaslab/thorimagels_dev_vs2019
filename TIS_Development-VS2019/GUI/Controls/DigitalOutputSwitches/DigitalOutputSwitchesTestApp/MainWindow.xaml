<Window x:Class="DigitalOutputSwitchesTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ds="clr-namespace:DigitalOutputSwitches;assembly=DigitalOutputSwitches"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid x:Name="layoutRoot">
        <ds:DigitalOutputSwitchesControl Name="dsControl"
                                         SwitchState0="{Binding SwitchStateTest,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
