<Window x:Class="ThorImage.SetupHardware"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hs="clr-namespace:HardwareSetupUserControl;assembly=HardwareSetupUserControl"
    Name="HSWindow" Title="Hardware Setup" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closing="HSWindow_Closing">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ThemeControl;component/ThorStyleDark.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="#FF333333">
        <StackPanel>
            <hs:UserControl1 Name="hardwareSetupUC" Margin="1" />
            <Button Name="butOk" Content="OK" Width="75" Height="35" HorizontalAlignment="Right" Margin="5" Click="butOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
